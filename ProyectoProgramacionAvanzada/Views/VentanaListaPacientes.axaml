<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ProyectoProgramacionAvanzada.Views.VentanaListaPacientes"
        Title="Lista de Pacientes"
        Width="800" Height="600">

    <StackPanel Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="500">
            <TextBox x:Name="PacientesTextBox"
                     AcceptsReturn="True"
                     IsReadOnly="True"
                     TextWrapping="Wrap"/>
        </ScrollViewer>

        <Button Content="Cerrar" Click="CerrarButton_Click"/>
    </StackPanel>
</Window>