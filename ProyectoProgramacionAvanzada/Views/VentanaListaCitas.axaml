<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ProyectoProgramacionAvanzada.Views.VentanaListaCitas"
        Title="Lista de Citas"
        Width="800" Height="600">
    <StackPanel Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="500">
            <TextBox x:Name="CitasTextBox"
                     AcceptsReturn="True"
                     IsReadOnly="True"
                     TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button Content="Cerrar" Click="CerrarButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>